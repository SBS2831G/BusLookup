-var months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sept', 'Oct', 'Nov', 'Dec']
for bus in buses
    div(class='bus ' + bus.cssClass)
        label(for=bus.registration.prefix + bus.registration.number)
            span.numberplate=bus.registration.prefix + bus.registration.number + bus.registration.checksum
        input.busHide(type='checkbox' id=bus.registration.prefix + bus.registration.number)
        div.bus-data
            div.data.deployment
                span Deployment
                span=bus.operator.depot.length ? (bus.operator.depot + ' ' + bus.operator.permService) : 'Unknown'
            div.data.make
                span Make
                span=bus.busData.make
            div.data.model
                span Model
                span=bus.busData.model
            div.data.bodywork
                span Bodywork
                span=bus.busData.bodywork
            div.data.batch
                span Batch
                span=bus.fleet.batch
            div.data.dereg
                span Deregistration
                if +bus.busData.deregDate === 0
                    span Unknown
                else
                    div.dereg-div
                        span.dereg-date=bus.busData.deregDate.getUTCDate() + ' ' + months[bus.busData.deregDate.getUTCMonth()] + ' ' + bus.busData.deregDate.getFullYear()
                        span.timeToDereg=bus.timeToDereg
            div.data
                span Gearbox
                span=bus.busData.gearbox
            div.data
                span EDS
                span=bus.busData.edsModel
            div.data
                span Chair Model
                span=bus.misc.chair
            div.data
                span Door Model
                span=bus.misc.door
            div.data
                span Aircon Model
                span=bus.misc.aircon
            div.data
                span Notes
                span=bus.misc.notes
